production:
  adapter:   <%= scope.lookupvar("gitlab::db_adapter") %>
  encoding:  <%= scope.lookupvar("gitlab::db_encoding") %>
  reconnect: <%= scope.lookupvar("gitlab::db_reconnect") %>
  database:  <%= scope.lookupvar("gitlab::db_name") %>
  pool:      <%= scope.lookupvar("gitlab::db_pool") %>
  username:  <%= scope.lookupvar("gitlab::db_user") %>
  password:  <%= scope.lookupvar("gitlab::db_pass") %>
